<div class="row">
    <h1>ZE BURGERNATOR 9001</h1>
</div>

<div class="row">
    <div class="col-6">
        <h3>Burgers to Eat</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h3>Burges that have been Ate</h3>
        <ul class="list-group">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row align-middle">
    <h3>Add a Burger</h3>
</div>
<div class="row">
<form class="create-form">

    <div class="form-group">
        <label for="burgerName">Burger: </label>
        <input type="text" id="burgerName" name="name">
    </div>
    <button class="btn btn-primary" type="submit">Add Burger</button>

</div>